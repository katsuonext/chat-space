.-list
  .message-posts{data: {message: {id: message.id}}}
    .posts-name
      = message.user.name
    .posts-inside
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__' if message.image.present?